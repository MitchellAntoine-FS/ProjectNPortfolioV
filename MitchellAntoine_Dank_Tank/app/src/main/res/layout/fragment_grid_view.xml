<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ImageView
        android:id="@+id/grid_item_imageView"
        android:layout_width="306dp"
        android:layout_height="360dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="122dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gorillaglue4"
        android:contentDescription="@string/gorillaglue4" />

    <TextView
        android:id="@+id/strain_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:scaleX="1"
        android:text="@string/gorilla_glue_4"
        app:layout_constraintBottom_toBottomOf="@+id/grid_item_imageView"
        app:layout_constraintStart_toStartOf="@+id/grid_item_imageView"
        app:layout_constraintTop_toTopOf="@+id/grid_item_imageView"
        app:layout_constraintVertical_bias="0.914" />
</androidx.constraintlayout.widget.ConstraintLayout>